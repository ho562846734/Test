page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}



.weui-navbar{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.top{
  width: 100%;
  height: 80rpx;
  background-color: #80e2e27a;
  display: flex;
  justify-content: space-around;
}



.content{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}



.item2{
  height: 30px;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #91db60;
  margin-left: 5%;
  margin-right: 5%;
}

.text{
  height: 80px;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: #d7bedf;
}


.tabbar {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  bottom: 0;
  left: 0;
  border: 1px solid black;
  margin-left: 5%;
  margin-bottom: 5%;
  background-color: #80e2e27a;
}